.content
	* + *
		margin-top: $line-height

pre
	border-radius: 4px
	border: 1.5px solid rgba(0,0,0,0.1)
	// box-shadow: 0 6px 8px rgba(102,119,136,0.03), 0 1px 2px rgba(102,119,136,0.3)

h1
	font-size: 1.5rem

h2
	margin-top: 8px
	margin-bottom: 16px
	white-space: nowrap
	overflow: hidden
	font-size: 1.25rem
	color: #745fb5
	font-weight: 400
	:after
		margin-left: 1rem
		content: ''
		display: inline-block
		vertical-align: middle
		width: 100%
		height: 1px
		background: linear-gradient(to right,rgba(116,95,181,0.3),transparent 75%)
