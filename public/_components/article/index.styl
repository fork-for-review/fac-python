.content
	margin-bottom: 4rem
	* + *
		margin-top: $line-height

	pre
		border-radius: 4px
		border: 1.5px solid rgba(0,0,0,0.1)
		// box-shadow: 0 6px 8px rgba(102,119,136,0.03), 0 1px 2px rgba(102,119,136,0.3)

	h1, h2, h3
		margin-top: (2*$line-height)
		+above(lg)
			:before
				// display: none
				transform: translateX(-100%);
				margin-left: -0.5rem
				font-weight: 500
				position: absolute;
				opacity: 0.25

	h1+h2, h1+h3, h2+h1, h2+h3, h3+h1, h3+h2
		margin-top: $line-height

	h1
		font-size: 1.5rem
		hyphens: none
		+above(lg)
			:before
				content: '#'

	h2
		hyphens: none
		// white-space: nowrap
		// overflow: hidden
		font-size: 1.25rem
		color: $color-accent
		position: relative;
		+above(lg)
			:before
				content: '##'
		::selection
			background $color-font

	h3
		+above(lg)
			:before
				content: '###'

	a
		color: currentColor
		box-shadow: 0px 1px alpha($color-accent, 0.6)
		:hover
			color: $color-accent
			box-shadow: 0px 1px alpha($color-accent, 0)

	blockquote
		hyphens: none
		border-left: 3px solid alpha($color-accent, 0.75)
		font-size: 1.25em
		padding: 1rem 0 1rem 1.25rem
		+above(lg)
			margin-left: -1.25em

	hr
		border: 1px dashed alpha($color-accent, 0.75)
		margin-top: (1.5*$line-height)
		margin-bottom: (1.5*$line-height)
		height: 0
		+above(md)
			margin-left: 0
			width: 20%

	li
		margin-left: 1.1em
		margin-top: (0.5*$line-height)
		+above(lg)
			margin-left: 0
		:before
			position: absolute;
			color: alpha($color-accent, 0.5)
			font-weight: 600
			font-family: $font-mono
			margin-left: -1.25rem

	em
		font-style: italic;
		letter-spacing: -0.25px

	p > code[class*='language-']
		padding: 0.15em 0.35em !important

	ul
		margin-top: 0
		li
			:before
				content: '*'
			ul
				li
					list-style: none
					margin-left: 1.25rem
		ol
			li
				:before
					display: none

	ol
		li
			list-style: decimal-leading-zero;
			margin-left: 1.5em
			+above(lg)
				margin-left: 0
			ul
				li
					list-style: none
					margin-left: 1.25rem

	ol, ul
		ol, ul
			li
				margin-left: 1.65rem
				opacity: 0.75
				font-size: 0.85em
				// margin-top: 0
