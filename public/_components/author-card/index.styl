.author-anchor
	display: flex;
	flex: 1
	color: currentColor
	*+*
		margin-top: 0 !important
	// align-items: center;

.author-card
	display: flex;
	// align-items: center;
	position: relative;
	*+*
		margin-top: 0 !important
	.info
		flex 1
	.name
		font-weight: 500
	.description
		color: rgba(0,0,0,0.5)
	.avatar
		border-radius: 50%
		height: 4rem
		width: 4rem
		margin-right: 1.5rem
		overflow: hidden;
		img
			width: 100%
			height: 100%
	.social
		display: flex;
		flex-wrap: wrap;
		flex-direction: column;
		+above(md)
			flex-direction: row;
			align-self: flex-start;
			position: absolute;
			right: 0
			margin-top: 0.25rem
		a
			box-shadow: none
		svg
			margin-left: 0.5rem
			color: gray
			height: 1.25rem
			stroke-width 1.75
			+above(md)
				height: 1.333rem
			:hover, :active, :focus
				color: $color-accent

article
	.author-card
		padding-top 2rem
		margin-top: 4rem
		& + .author-card
			border-top: 1px solid rgba(0,0,0,0.1)
			margin-top: 2rem

.author-page
	.author-card
		padding-top: 2rem
		padding-bottom: 2rem
		border-bottom: 1px solid rgba(0,0,0,0.1)
		margin-bottom: 4rem
