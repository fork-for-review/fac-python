+above(md)
	body
		margin-left: 240px

body >
	header
		position: relative
		padding: 2.25rem 1.25rem
		background-color: $color-header
		+above(md)
			font-size: 1rem
			position: fixed
			top: 0
			left: 0
			bottom: 0
			width: 240px
			padding: 2.25rem
			display: flex
			flex-direction: column
			justify-content: space-between
			margin-bottom: 0
		a
			color: rgba(255, 255, 255, 0.8)

		a.logo
			font-weight: bold
			color: #fff
			display: block
			font-size: 1.125rem
			line-height: 1.5rem
			margin-bottom: 1.25em
			div
				margin-top: 4px
				display: block
				font-weight: normal
				color: rgba(255, 255, 255, 0.5)
				margin-left: 0
				display: block
				line-height: 1.25
				+above(md)
					// line-height: inherit
					font-size: 1rem


		nav a
			display: none
			margin-top: 0.5em
			margin-bottom: 0.5em
			+above(md)
				display: inline-block

		ul.social
			display: none
			+above(md)
				margin-top: 0
				display: block
				position: static
			li
				display: inline-block
				margin-right: 10px
				:first-child
					margin-left: -10px
				:last-child
					margin-right: 0
				a
					padding: 5px
					opacity: 0.6
					margin-right: 5px
					:hover, :active, :focus
						opacity: 1
				svg
					height: 1.5rem
					stroke-width 1.25
					+above(md)
						height: 1rem
						stroke-width 1.75

		a.active span, a:hover:not(.logo) span
			border-bottom: 2px solid rgba(255, 255, 255, 0.35)
