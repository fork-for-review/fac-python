.video-container
		position: relative
		width: 100%
		height: 0
		padding-bottom: (100/(16/9))%
	.video
			position: absolute
			top: 0
			left: 0
			width: 100%
			height: 100%

.stack
	flex-flow: row wrap
	display: flex
	margin-left: -1rem
	margin-right: -1rem
	div, a
		flex: auto
		width: 200px
		margin: 1rem
	div img, a img
		width: 100%
		height: auto

figcaption
	margin-top: -0.625rem
	background-color: #FCFCFC

a.uri
	border-radius: 0.25rem
	box-shadow: none
	vertical-align: bottom
	font-size: 0.875rem
	line-height: 1.5rem
	margin-right: 0.75rem
	margin-top: 0.75rem
	padding: 0.25rem 0.75rem
	background: alpha($color-font,0.05)
	display: inline-flex
	align-items: center
	span
		margin: 0 0 0 0.25rem
	svg
		height: 0.875rem

		width: auto
