mixin youtube(id)
	.video-container
		iframe.video(type="text/html" src="https://www.youtube.com/embed/#{id}?autoplay=0" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen)

mixin vimeo(id)
	.video-container
		iframe.video(src="https://player.vimeo.com/video/#{id}" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen)

mixin code({language="python"}={})
	pre(class=`language-${language}`)
		code
			block

mixin uri(id)
	a.uri(href='https://www.urionlinejudge.com.br/judge/en/problems/view/#{id}')
		i(data-feather='paperclip')
		span= id
